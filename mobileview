        padding: 10px;
    }

    .nav-links {
        flex-direction: column;
        gap: 15px;
        padding: 10px 0;
    }

    .register-btn {
        margin-top: 10px;
        width: 100%;
        text-align: center;
    }
}

/* Hero Section Responsive */
@media (max-width: 768px) {

