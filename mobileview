/* ================== Global Responsive Fix ================== */

* {
    box-sizing: border-box;
}

/* Make images scale in small screens */
img {
    max-width: 100%;
    height: auto;
}

/* Navbar Responsive */
@media (max-width: 768px) {

    nav {
